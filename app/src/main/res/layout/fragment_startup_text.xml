<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.hkw.arrivinginberlin.StartupTextFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.hkw.arrivinginberlin.TextviewPlus
            android:id="@+id/startupTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="@string/title_screen_two"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.hkw.arrivinginberlin.TextviewPlus
            android:id="@+id/startupText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/startupTitle"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:text="@string/screen_one"
            android:textSize="18sp"/>

        <com.hkw.arrivinginberlin.TextviewPlus
            android:id="@+id/startupText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/startupText"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:text="@string/screen_two"
            android:textSize="18sp"/>

        <com.hkw.arrivinginberlin.ButtonPlus
            android:id="@+id/next"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_below="@id/startupText2"
            android:text="@string/next"
            android:fontFamily="sans-serif"
            android:background="#438D8D"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_alignEnd="@id/startupText2"
            />
    </RelativeLayout>

</FrameLayout>
